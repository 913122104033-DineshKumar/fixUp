<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <!--  Toolbar for Add Post Screen  -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/add_post_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:title="Add New Post" />
    <!--  Post Title Input  -->
    <EditText
        android:id="@+id/post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:hint="Enter Title"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="10dp" />
    <!--  Post Description Input  -->
    <EditText
        android:id="@+id/post_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="Enter Description"
        android:inputType="textMultiLine"
        android:minLines="4"
        android:padding="10dp" />

    <EditText
        android:id="@+id/post_priority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="Priority"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="10dp" />
    <!--  Location Input - City  -->
    <EditText
        android:id="@+id/post_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="City"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="10dp" />
    <!--  Location Input - Area  -->
    <EditText
        android:id="@+id/post_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="Area"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="10dp" />
    <!--  Image Upload Button  -->
    <Button
        android:id="@+id/upload_image_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Upload Image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ProgressBar
            android:id="@+id/upload_image_progress_bar"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorError"
            android:max="100"
            android:progress="50"
            android:progressTint="@color/colorSuccess"
            android:visibility="gone" />
    </LinearLayout>
    <!--  Volunteers Needed Count Input  -->
    <EditText
        android:id="@+id/volunteers_needed_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="Volunteers Needed"
        android:inputType="number"
        android:minHeight="48dp"
        android:padding="10dp" />
    <!--  Add Post Button  -->
    <Button
        android:id="@+id/add_post_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="?attr/colorPrimary"
        android:text="Add Post"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ProgressBar
            android:id="@+id/add_post_progress_bar"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorError"
            android:max="100"
            android:progress="50"
            android:progressTint="@color/colorSuccess"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>